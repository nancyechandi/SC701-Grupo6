@model IEnumerable<Restaurante_API.Models.Reseña>
@{
    ViewData["Title"] = "Calificaciones";
    
}

@if (ViewData["Restaurante"] != null)
{
    var restaurante = ViewData["Restaurante"] as Restaurante;

    <h2>@restaurante.nombre</h2>
    <h6>@restaurante.descripcion</h6>
    <br />
}
<h4>Reseñas</h4>
<br />
@foreach (var reseña in Model)
{
    <div class="col-md-4 mb-3">
    <div class="card" style="width: 500px;">
        <div class="card-body">
        
        @for (int i = 1; i <= 5; i++)
        {
                <i class="fa-solid @((reseña.puntuacion >= i) ? "fa-star" : "fa-star-o")" style="color: gold;"></i>
        }
        <br>
        @reseña.comentario
        </div>
    </div>
    <br />
    </div>
    
}
<br />
<br />
<h3>Agregar Calificación</h3>
    <form method="post" action="/Reseña/AddReseña">       
        <label for="rating">Puntuación:</label>
        <input type="number" id="rating" name="puntuacion" min="1" max="5">
        <br>
        <label for="comment">Comentario:</label>
        <textarea id="comment" name="comentario" rows="4" cols="50"></textarea>
        <br>
        <label for="additional">Adicionales:</label>
        <input type="text" id="additional" name="adicionales">
        <br>
        <button class="btn btn-danger" type="submit">Enviar Calificación</button>
    </form>

