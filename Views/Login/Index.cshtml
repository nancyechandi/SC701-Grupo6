@model Restaurante_API.Models.Usuario

<h4>Ticos Cuisine</h4>

<ul class="nav nav-tabs" id="myTab" role="tablist">
    <li class="nav-item" role="presentation">
        <a class="nav-link active" id="tab1-tab" data-bs-toggle="tab" href="#tab1" role="tab" aria-controls="tab1" aria-selected="true">Iniciar sesion</a>
    </li>
    <li class="nav-item" role="presentation">
        <a class="nav-link" id="tab2-tab" data-bs-toggle="tab" href="#tab2" role="tab" aria-controls="tab2" aria-selected="false">Registrarse</a>
    </li>
</ul>

<div class="tab-content" id="myTabContent">
    <div class="tab-pane fade show active" id="tab1" role="tabpanel" aria-labelledby="tab1-tab">
        @using (Html.BeginForm("Login", "Login", FormMethod.Post))
        {
            <div class="container mt-5">
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <div class="card">
                            
                            <div class="card-body">
                                <form>
                                    <div class="form-group">

                                        <label asp-for="nombre">Nombre de usuario:</label>
                                        <input asp-for="nombre" required />
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="clave">Contraseña:</label>
                                        <input asp-for="clave" type="password" required />
                                    </div>
                                    <br />
                                    <button type="submit" class="btn btn-danger btn-block">Iniciar Sesión</button>
                                    <div class="text-center mt-3">
                                        <a class="nav-link" id="tab2-tab" data-bs-toggle="tab" href="#tab2" role="tab" 
                                        aria-controls="tab2" aria-selected="false">¿No tienes una cuenta? Regístrate.</a>
                                        
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="tab-pane fade" id="tab2" role="tabpanel" aria-labelledby="tab2-tab">
        @using (Html.BeginForm("Registro", "Login", FormMethod.Post))
        {
            <div class="container mt-5">
                <div class="row justify-content-center">
                    <div class="col-md-6">
                        <div class="card">
                            
                            <div class="card-body">
                                <form>
                                    <div class="form-group">

                                        <label asp-for="nombre">Nombre de usuario:</label>
                                        <input asp-for="nombre" required />
                                    </div>
                                    <div class="form-group">
                                        <label asp-for="clave">Contraseña:</label>
                                        <input asp-for="clave" type="password" required />
                                    </div>
                                    <div class="form-group">
                                        <label>Rol:</label>
                                        <select name="rol">
                                            <option value="Cliente">Cliente</option>
                                            <option value="Administrador">Administrador</option>
                                        </select>
                                    </div>
                                    <br />
                                    <button type="submit" class="btn btn-danger btn-block">Registrarse</button>
                                    <div class="text-center mt-3">
                                        <a class="nav-link active" id="tab1-tab"
                                        data-bs-toggle="tab" href="#tab1" role="tab"
                                           aria-controls="tab1" aria-selected="true">¿Ya tienes una cuenta? Inicia sesion.</a>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    
</div>



